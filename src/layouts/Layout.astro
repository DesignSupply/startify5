---
import Head from '@/components/Head.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import OffCanvas from '@/components/OffCanvas.astro';
import BodyScript from '@/components/BodyScript.astro';
import type { siteDataType } from '@/types/siteData';

const siteData: siteDataType = {
  siteName: import.meta.env.PUBLIC_SITENAME,
  siteUrl: import.meta.env.PUBLIC_ENVURL,
  pageName: Astro.props.pageName,
  title: Astro.props.title,
  description: Astro.props.description,
  ogpImage: Astro.props.ogpImage,
  type: Astro.props.type,
  path: Astro.props.path,
  ldJSON: {
    '@context': 'http://schema.org',
    '@type': 'BreadcrumbList',
    itemListElement: Astro.props.ldJSON
  }
};
---

<!doctype html>
<html lang="ja" data-theme="light">
  <head>
    <Head siteData={siteData} />
  </head>
  <body>
    <noscript>※当ウェブサイトを快適に閲覧して頂くためjavascriptを有効にしてください</noscript>
    <div class="l-base">
      <Header />
      <slot />
      <Footer />
    </div>
    <OffCanvas />
    <BodyScript />
  </body>
</html>
