---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import OffCanvas from '@/components/OffCanvas.astro';
import BodyScript from '@/components/BodyScript.astro';
import type { siteDataType } from '@/types/siteData';
import '@/styles/style.scss';

const siteData: siteDataType = {
  siteName: import.meta.env.PUBLIC_SITENAME,
  siteUrl: import.meta.env.PUBLIC_ENVURL,
  pageName: Astro.props.pageName,
  title: Astro.props.title,
  description: Astro.props.description,
  ogpImage: Astro.props.ogpImage,
  type: Astro.props.type,
  path: Astro.props.path,
  ldJSON: {
    '@context': 'http://schema.org',
    '@type': 'BreadcrumbList',
    itemListElement: Astro.props.ldJSON
  }
};
---

<!doctype html>
<html lang="ja" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="google-site-verification" content="*****" />
    <meta name="msvalidate.01" content="*****" />
    <meta name="robots" content="index,follow,noodp" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <meta name="format-detection" content="telephone=no,address=no,email=no" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@" />
    <meta property="twitter:account_id" content="*****" />
    <meta property="fb:admins" content="*****" />
    <meta property="fb:app_id" content="*****" />
    <meta property="og:locale" content="ja_JP" />
    <meta property="og:site_name" content={siteData.siteName} />
    <meta name="msapplication-tap-highlight" content="no" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="application-name" content={siteData.siteName} />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="apple-mobile-web-app-title" content={siteData.siteName} />
    <meta name="msapplication-TileImage" content="*****" />
    <meta name="msapplication-TileColor" content="#000" />
    <meta name="theme-color" content="#000" />
    <meta name="generator" content={Astro.generator} />
    <link rel="manifest" href="/manifest.json" />
    <link rel="apple-touch-icon" href="" />
    <link rel="icon" sizes="192x192" href="" />
    <link rel="icon" type="image/svg+xml" href="data:," />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <!-- ページ個別メタデータ -->
    <meta property="og:title" content={siteData.title} />
    <meta property="og:description" content={siteData.description} />
    <meta property="og:url" content={`${siteData.siteUrl}${siteData.path}`} />
    <meta property="og:type" content={siteData.type} />
    <meta property="og:image" content={`${siteData.siteUrl}${siteData.ogpImage}`} />
    <meta name="twitter:title" content={siteData.title} />
    <meta name="twitter:description" content={siteData.description} />
    <meta name="twitter:url" content={`${siteData.siteUrl}${siteData.path}`} />
    <meta name="description" content={siteData.description} />
    <link rel="canonical" href={`${siteData.siteUrl}${siteData.path}`} />
    <title>{siteData.title}</title>
    <script type="application/ld+json" is:inline set:html={JSON.stringify(siteData.ldJSON)} />
  </head>
  <body>
    <noscript>※当ウェブサイトを快適に閲覧して頂くためjavascriptを有効にしてください</noscript>
    <div class="l-base">
      <Header />
      <slot />
      <Footer />
    </div>
    <OffCanvas />
    <BodyScript />
    <script src="@/main.ts"></script>
  </body>
</html>
