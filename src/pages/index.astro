---
import Layout from '@/layouts/Layout.astro';
import siteData from '../../siteData.mjs';
import AppReact from '@/components/react/AppReact.tsx';

const pageId = 'home',
  pageMeta = siteData[pageId],
  ldJSON = [
    {
      '@type': 'ListItem',
      position: 1,
      item: {
        '@id': 'https://example.com/',
        name: 'HOME'
      }
    }
  ];
---

<Layout
  pageName={pageId}
  title={pageMeta.title}
  description={pageMeta.description}
  ogpImage={pageMeta.ogpImage}
  type={pageMeta.type}
  path={pageMeta.path}
  ldJSON={ldJSON}
>
  <main class="l-main p-front-page p-page">
    <h1>startify5</h1>
    <AppReact client:load />
    <div id="vue_app"></div>
  </main>
</Layout>

<style lang="scss" is:global>
  html {
    margin: 0;
  }
</style>
